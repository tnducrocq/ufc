<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="fr.tnducrocq.ufc.presentation">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/UFC">
        <meta-data
            android:name="fr.tnducrocq.ufc.presentation.CustomCachingGlideModule"
            android:value="GlideModule"/>

        <activity android:name=".LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".EventFightsActivity"/>
        <activity
            android:name=".FighterActivity"
            android:theme="@style/UFC_FIGHT"/>
        <activity
            android:name=".EventFightActivity"
            android:label="@string/title_activity_event_fight"
            android:theme="@style/UFC_FIGHT">
        </activity>
        <activity android:name=".Main2Activity">
        </activity>
    </application>

</manifest>